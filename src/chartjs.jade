extends templates/layout.jade

block pageVars
    - var selectedNav = 'home'


block title
    title Tessel Data Viewer - Chart.js

block contents

    form#filter
        fieldset
            label
                | start 
                input(name="start-date" size="28")
            label
                | end 
                input(name="end-date" size="28")
            label
                | inc
                input(name="inc" size="3")
            
            input(name="submit" type="submit" value="filter")


    canvas#myChart(width="2200" height="400")


block scripts
    script(src='/assets/vendor/zepto.min.js')
    script(src='/assets/vendor/Chart.js')
    script(src='/assets/vendor/moment.js')
    script(src='/assets/js/chartjs2.js')
